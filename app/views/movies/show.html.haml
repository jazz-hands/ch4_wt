%h1 More Details: #{@movie.title}

%table#movie
  %thead
    %tr
      %th Movie Title
      %th Rating
      %th Release Date
    %tbody
      %tr
        %td= @movie.title
        %td= @movie.rating
        %td= @movie.release_date
      %tr
        %td= link_to 'Edit info', edit_movie_path(@movie)
        %td= link_to 'Delete', movie_path(@movie), :method => :delete
        %td= link_to 'Back to movie list', movies_path
        